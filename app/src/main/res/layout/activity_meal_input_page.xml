        android:orientation="horizontal">
        <TextView
            android:gravity="end"
            android:text="Date:"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:fontFamily="sans-serif-black"/>
        <EditText
            android:id="@+id/date"
            android:hint=""
            android:inputType="text"
