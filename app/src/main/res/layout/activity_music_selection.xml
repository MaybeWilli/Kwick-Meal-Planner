<?xml version="1.0" encoding="utf-8"?>
<!--This is the in-developnent UI-->
<!--This page holds a bunch of buttons that allow the user to
switch the background song that plays.-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calendar_input_meal"
    android:orientation="vertical">



    <Button
        android:id="@+id/songButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rain song"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:textColor="@color/black"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/songButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drinking Song"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:textColor="@color/black"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/songButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giornio's theme"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:textColor="@color/black"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/songButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mushroom Song"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:textColor="@color/black"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/pauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Music"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:textColor="@color/black"
        android:textSize="30sp"/>




</LinearLayout>