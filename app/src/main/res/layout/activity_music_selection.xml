<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calendar_input_meal"
    android:background="@drawable/gradient_list"
    android:id="@+id/mainLayout">


    <Button
        android:id="@+id/songButton1"
        android:layout_width="118dp"
        android:layout_height="107dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/round_button"
        android:fontFamily="casual"
        android:fontFeatureSettings="@string/material_motion_easing_standard"
        android:gravity="center_vertical|center_horizontal"
        android:text="Rain song"
        android:textColor="#fff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/songButton2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="126dp"
        android:background="@drawable/round_button"
        android:fontFamily="casual"
        android:fontFeatureSettings="@string/material_motion_easing_standard"
        android:gravity="center_vertical|center_horizontal"
        android:text="Drinking Song"
        android:textColor="#fff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/songButton3"
        android:layout_width="126dp"
        android:layout_height="117dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="250dp"
        android:background="@drawable/round_button"
        android:fontFamily="casual"
        android:fontFeatureSettings="@string/material_motion_easing_standard"
        android:gravity="center_vertical|center_horizontal"
        android:text="Giornio's theme"
        android:textColor="#fff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/songButton4"
        android:layout_width="138dp"
        android:layout_height="137dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="499dp"
        android:layout_marginEnd="228dp"
        android:background="@drawable/round_button"
        android:fontFamily="casual"
        android:fontFeatureSettings="@string/material_motion_easing_standard"
        android:gravity="center_vertical|center_horizontal"
        android:text="Mushroom Song"
        android:textColor="#fff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/pauseButton"
        android:layout_width="107dp"
        android:layout_height="106dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="553dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/round_button"
        android:fontFamily="casual"
        android:fontFeatureSettings="@string/material_motion_easing_standard"
        android:gravity="center_vertical|center_horizontal"
        android:text="No Music"
        android:textColor="#fff"
        android:textSize="20dp" />


</RelativeLayout>