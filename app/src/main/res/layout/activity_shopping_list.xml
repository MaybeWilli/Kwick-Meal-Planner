<?xml version="1.0" encoding="utf-8"?>
<!--This is the in-developnent UI-->
<!--This is the shopping list page. It displays what ingredients are
used in the meals from the current monday-sunday week.-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calendar_input_meal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Weekly Shopping List"
        android:textAlignment="center"
        android:textSize="35sp"
        />

    <TextView
        android:id="@+id/weekTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Monday to Sunday"
        android:textAlignment="center"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/ingredientsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Monday to Sunday"
        android:textAlignment="center"
        android:textSize="20sp"
        />


</LinearLayout>