<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

	<TextView
		android:id="@+id/textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:text="" />

	<Button
		android:id="@+id/button"
		android:layout_width="161dp"
		android:layout_height="157dp"
		android:layout_below="@+id/textView"
		android:layout_alignParentEnd="true"
		android:layout_marginTop="-295dp"
		android:layout_marginEnd="221dp"
		android:background="@drawable/round_button"
		android:fontFamily="casual"
		android:fontFeatureSettings="@string/material_motion_easing_standard"
		android:gravity="center_vertical|center_horizontal"
		android:text="Calendar"
		android:textColor="#fff"
		android:textSize="30dp" />

	<Button
		android:id="@+id/inputMealPageButton"
		android:layout_width="161dp"
		android:layout_height="157dp"
		android:layout_below="@+id/button"
		android:layout_alignParentEnd="true"
		android:layout_marginTop="74dp"
		android:layout_marginEnd="30dp"
		android:background="@drawable/round_button"
		android:fontFamily="casual"
		android:fontFeatureSettings="@string/material_motion_easing_standard"
		android:gravity="center_vertical|center_horizontal"
		android:text="Meal Input"
		android:textColor="#fff"
		android:textSize="30dp" />

	<Button
		android:id="@+id/displayMealPageButton"
		android:layout_width="161dp"
		android:layout_height="157dp"
		android:layout_below="@+id/inputMealPageButton"
		android:layout_alignParentEnd="true"
		android:layout_marginTop="86dp"
		android:layout_marginEnd="172dp"
		android:background="@drawable/round_button"
		android:fontFamily="casual"
		android:fontFeatureSettings="@string/material_motion_easing_standard"
		android:gravity="center_vertical|center_horizontal"
		android:text="Meal Display"
		android:textColor="#fff"
		android:textSize="30dp" />

</RelativeLayout>
