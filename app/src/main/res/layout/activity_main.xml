<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/textview_firstmeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="9dp"
        android:gravity="center_horizontal"
        android:text="Your First Meal"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"/>

    <TextView
        android:id="@+id/textview_secondmeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="9dp"
        android:gravity="center_horizontal"
        android:text="Your Second Meal"
        android:layout_below="@+id/textview_firstmeal"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_secondmeal"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Insert Meal"
        android:height="25dp"
        android:width="250dp"
        android:fontFamily="sans-serif-medium"
        android:fontFeatureSettings=""/>
</RelativeLayout>